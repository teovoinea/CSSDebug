{
  "manifest_version": 2,

  "name": "CSS Debug",
  "description": "This extension highlights borders of html elements",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
    "activeTab"
  ],
  "web_accessible_resources": [
    "debug.css"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}
